@model Model.EF.User
@{
    ViewBag.Title = "ĐĂNG KÝ HỆ THỐNG QUẢN TRỊ MÁI ẤM TRUYỀN TIN";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>ĐĂNG KÝ HỆ THỐNG MÁI ẤM TRUYỀN TIN</title>
    <link href="~/Assets/admin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<style>
    .field-icon {
        float: right;
        margin-right: 10px;
        margin-left: -25px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }
</style>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-bold my-3" style="color: rgb(82, 92, 163, 0.95)">ĐĂNG KÝ</h3>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                                    {
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });

                                        <div class="form-group">
                                            <label class="small mb-1 font-weight-bold" for="Name">Họ và tên người dùng</label>
                                            <input type="text" id="UserName" name="Name" class="form-control py-3" autofocus="autofocus" placeholder="Nhập tài khoản của bạn" required value="@Model.Name" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1 font-weight-bold" for="UserName">Tên tài khoản</label>
                                            <input type="text" id="UserName" name="UserName" class="form-control py-3" autofocus="autofocus" placeholder="Nhập tài khoản của bạn" required value="@Model.UserName" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1 font-weight-bold" for="Password">Mật khẩu</label>
                                            <input type="password" id="Password" name="Password" class="form-control py-3" placeholder="Mật khẩu" required />
                                            <div id="eyeslash" hidden><i class="fa fa-eye-slash field-icon" onclick="showHide()" aria-hidden="true"></i></div>
                                            <div id="eye"><i class="fa fa-eye field-icon" onclick="showHide();" aria-hidden="true"></i></div>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1 font-weight-bold" for="ConfirmPassword">Nhập lại mật khẩu</label>
                                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control py-3" placeholder="Nhập lại mật khẩu" required />
                                            <div id="eyeslashConfirm" hidden><i class="fa fa-eye-slash field-icon" onclick="showHideConfirm()" aria-hidden="true"></i></div>
                                            <div id="eyeConfirm"><i class="fa fa-eye field-icon" onclick="showHideConfirm();" aria-hidden="true"></i></div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-3 mb-0">
                                            <a href="/he-thong/dang-nhap">
                                                Đã có tài khoản? Đăng nhập
                                            </a>
                                            <button class="btn btn-primary" type="submit">Đăng ký</button>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; @DateTime.Now.ToString("yyyy")</div>
                        <div>
                            <a href="#">MÁI ẤM TRUYỀN TIN</a>
                            &middot;
                            <a href="#">@DateTime.Now.ToString("yyyy") &amp; CHÍNH SÁCH</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script type="text/javascript">

        const password = document.getElementById('Password');
        const confirmPassword = document.getElementById('ConfirmPassword');
        const eye = document.getElementById('eye');
        const eyeslash = document.getElementById('eyeslash');
        const eyeConfirm = document.getElementById('eyeConfirm');
        const eyeslashConfirm = document.getElementById('eyeslashConfirm');
        function showHide() {
            if (password.type === 'password') {
                password.setAttribute('type', 'text');
                eye.hidden = true;
                eyeslash.hidden = false;
            }
            else {
                password.setAttribute('type', 'password');
                eye.hidden = false;
                eyeslash.hidden = true;
            }
        }
        function showHideConfirm() {
            if (confirmPassword.type === 'password') {
                confirmPassword.setAttribute('type', 'text')
                eyeConfirm.hidden = true;
                eyeslashConfirm.hidden = false;
            }
            else {
                confirmPassword.setAttribute('type', 'password');
                eyeConfirm.hidden = false;
                eyeslashConfirm.hidden = true;
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/admin/js/scripts.js"></script>
</body>
</html>

