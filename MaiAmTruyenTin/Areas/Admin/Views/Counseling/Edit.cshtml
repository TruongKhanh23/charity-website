@model Model.EF.Counseling

@{
    ViewBag.Title = "SỬA PHIẾU THAM VẤN TÂM LÝ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    var session = (MaiAmTruyenTin.Common.UserLogin)Session[MaiAmTruyenTin.Common.CommonConstants.USER_SESSION];
}
<div id="page_content_inner">
    <h2 class="heading_b uk-margin-bottom">QUẢN LÝ PHIẾU THAM VẤN TÂM LÝ</h2>
    <div class="md-card uk-margin-large-bottom">
        <div class="md-card-content">
            <h3 style="border: 1px solid rgb(33, 150, 243); padding: 15px 15px; background-color: rgb(33, 150, 243);
                color: white; font-size: 15px;">
                CHỈNH SỬA PHIẾU THAM VẤN TÂM LÝ
            </h3>
            <div class="md-card-content">
                @using (Html.BeginForm("Edit", "Counseling", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Họ và tên<span class="req">*</span></label>
                            <input type="hidden" id="ChildrenID" name="ChildrenID" value="@Model.ChildrenID" />
                            <input type="text" readonly required class="md-input form-control" value="@ViewBag.ChildrenName" />
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Vấn đề trẻ gặp phải<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Problem, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Lần tham vấn<span class="req">*</span></label>
                            <input type="number" readonly id="Time" name="Time" value="@Model.Time" class="md-input form-control" />
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Mã phiếu tham vấn<span class="req">*</span></label>
                            <input type="text" readonly id="Ticket" name="Ticket" value="@Model.Ticket" class="md-input form-control" />
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Mô tả vấn đề<span class="req">*</span></label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Giải pháp<span class="req">*</span></label>
                            @Html.TextAreaFor(model => model.Solution, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>Phụ trách tham vấn<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Psychologist, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>Ngày chỉnh sửa phiếu<span class="req">*</span></label>
                            <input type="text" id="ModifiedDate" name="ModifiedDate" value="@DateTime.Now.ToString()" readonly class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>Người chỉnh sửa phiếu<span class="req">*</span></label>
                            <input type="text" name="ModifiedBy" id="ModifiedBy" readonly required class="md-input" value="@session.Name" />
                        </div>
                    </div>

                    <div class="uk-grid">
                        <p class="uk-width-medium-1-2 parsley-row">
                            <label>Trạng thái sử dụng<span class="req">*</span></label>
                            <input type="checkbox" id="Status" name="Status" value="true" @Html.Raw(Model.Status ? "checked" : "unchecked") data-md-icheck>
                        </p>
                    </div>
                    <br />
                    <div class="uk-input-group">
                        <input type="submit" class="md-btn md-btn-primary" value="CẬP NHẬT" />
                        <a href="@Url.Action("Index", "Counseling")" class="md-btn md-btn-danger">HỦY BỎ</a>
                        <a href="@Url.Action("Index", "Counseling")" class="md-btn md-btn-warning">QUAY LẠI DANH SÁCH</a>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
<script>
    (function () {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
            '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
    })();
</script>