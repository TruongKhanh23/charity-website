@using PagedList.Mvc;
@model PagedList.IPagedList<Model.ViewModel.SchoolReportViewModel>

<div class="md-list-content">
    @if (Model.Count() == 0)
    {
        <a href="/he-thong/hoc-ba/them-moi" style="color: red"><span class="md-list-heading">Chưa có dữ liệu</span></a>
        <span class="uk-text-small uk-text-muted">Học bạ</span>
    }
    @{ var i = 0;}
    @foreach (var item in Model)
    {
        var linkSchoolReport = "/he-thong/hoc-ba/chi-tiet/" + item.ID;
        <a href="@linkSchoolReport" style="color: black"><span class="md-list-heading">@item.SchoolReportCode</span></a>
        { i++; }
        if (i == 1)
        {
            <span class="uk-text-small uk-text-muted">Mã học bạ tiểu học</span>
        }
        else if (i == 2)
        {
            <span class="uk-text-small uk-text-muted">Mã học bạ trung học cơ sở</span>
        }
        else if (i == 3)
        {
            <span class="uk-text-small uk-text-muted">Mã học bạ trung học phổ thông</span>
        }

    }
</div>
