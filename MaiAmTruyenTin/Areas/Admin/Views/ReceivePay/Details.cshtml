@model Model.EF.ReceivePay

@{
    ViewBag.Title = "KHOẢN THU/ CHI | CHI TIẾT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
.
<div id="page_content_inner">
    @if (Model.ReceivableIsTrue == true)
    {
        <h2 class="heading_b uk-margin-bottom">QUẢN LÝ KHOẢN THU</h2>
    }
    else
    {
        <h2 class="heading_b uk-margin-bottom">QUẢN LÝ KHOẢN CHI</h2>
    }
    <div class="md-card uk-margin-large-bottom">
        <div class="md-card-content">
            <h3 style="border: 1px solid rgb(33, 150, 243); padding: 15px 15px; background-color: rgb(33, 150, 243); color: white; font-size: 15px;">THÔNG TIN</h3>
            <div class="md-card-content">
                <div class="uk-grid">
                    <div class="uk-width-medium-1-1 parsley-row">
                        <label>Tên phiếu<span class="req">*</span></label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "md-input form-control" })
                    </div>
                </div>

                <div class="uk-grid">
                    <div class="uk-width-medium-1-1 parsley-row">
                        <label>Ghi chú<span class="req">*</span></label>
                        <textarea name="Note" id="Note" required class="md-input">@Model.Note</textarea>
                    </div>
                </div>
                <div class="uk-grid">
                    <div class="uk-width-medium-1-2 parsley-row">
                        <label>Ngày khởi tạo<span class="req">*</span></label>
                        <input value="@Model.CreatedDate" readonly type="text" name="CreatedDate" id="CreatedDate" required class="md-input" value="@DateTime.Now.ToString()" />
                    </div>
                    <div class="uk-width-medium-1-2 parsley-row">
                        <label>Người khởi tạo<span class="req">*</span></label>
                        <input value="@Model.CreatedBy" readonly type="text" name="CreatedBy" id="CreatedBy" required class="md-input" />
                    </div>
                </div>
                <div class="uk-grid">
                    <div class="uk-width-medium-1-2 parsley-row">
                        <label>Ngày chỉnh sửa<span class="req">*</span></label>
                        <input type="text" id="ModifiedDate" name="ModifiedDate" value="@Model.ModifiedDate" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-2 parsley-row">
                        <label>Chỉnh sửa bởi<span class="req">*</span></label>
                        <input type="text" name="ModifiedBy" id="ModifiedBy" required class="md-input" value="@Model.ModifiedBy" />
                    </div>
                </div>

                <div class="uk-grid">
                    <p class="uk-width-medium-1-2 parsley-row">
                        <label>Trạng thái sử dụng<span class="req">*</span></label>
                        <input readonly type="button" @(Model.Status ? Html.Raw("class = 'md-btn md-btn-primary'") : Html.Raw("class = 'md-btn md-btn-danger'") ) @*class="md-btn md-btn-primary"*@ data-val="true" name="Status" id="Status" value="@(Model.Status ? "Kích hoạt" : "Khóa")" data-md-icheck />
                    </p>
                </div>
                <br />
                <div class="uk-input-group">
                    @if (Model.ReceivableIsTrue == true)
                    {
                        <a href="@Url.Action("Edit", "ReceivePay", new { id = Model.ID })" class="md-btn md-btn-success">CHỈNH SỬA</a>
                        <a href="@Url.Action("Index", "ReceivePay")" class="md-btn md-btn-warning">QUAY LẠI DANH SÁCH KHOẢN THU</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Edit", "ReceivePay", new { id = Model.ID })" class="md-btn md-btn-success">CHỈNH SỬA</a>
                        <a href="@Url.Action("Index1", "ReceivePay")" class="md-btn md-btn-warning">QUAY LẠI DANH SÁCH KHOẢN CHI</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
            '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
    })();
</script>

