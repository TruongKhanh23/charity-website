@model Model.EF.Children

@{
    ViewBag.Title = "TRẺ EM | THÔNG TIN CHI TIẾT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div id="page_content_inner">
    <div class="md-card-single">
        <div class="md-card-content" >
            <div class="row">
                <div class="col-md-4 col-lg-8" style="padding-top: 10px; padding-bottom: 10px">
                    <h2  class="heading_b uk-margin-bottom" style="color: rgb(101,159,19); font-weight: 1000; font-size: xx-large">QUẢN LÝ TRẺ EM</h2>
                </div>
                <div class="col-md-4 col-lg-2">
                </div>

                <div class="col-md-4 col-lg-2">
                    <a class="btn btn-primary" href="/Admin/Children/Index" title="Nhấn vào để xem danh sách trẻ">XEM DANH SÁCH</a>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-grid" data-uk-grid-margin data-uk-grid-match id="user_profile">
        <div class="uk-width-large-7-10">
            <div class="md-card">
                <div class="user_heading">
                    <div class="user_heading_menu" data-uk-dropdown="{pos:'left-top'}">
                        <i class="md-icon material-icons md-icon-light">&#xE5D4;</i>
                        <div class="uk-dropdown uk-dropdown-small">
                            <ul class="uk-nav">
                                <li><a href="#">Action 1</a></li>
                                <li><a href="#">Action 2</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="user_heading_avatar">
                        <div class="thumbnail">
                            <a href="@Model.Image" data-uk-lightbox="{group:'user-photos'}">
                                <img src="@Model.Image" alt="user avatar" />
                            </a>
                        </div>
                    </div>
                    <div class="user_heading_content">
                        <h2 class="heading_b uk-margin-bottom">
                            <span class="uk-text-truncate">@Model.FullName</span>
                            <span class="sub-heading">@Model.Gender | @Model.Age TUỔI</span>
                        </h2>
                    </div>

                    <a class="md-fab md-fab-small md-fab-accent" href="@Url.Action("Edit", "Children", new { id = Model.ID })">
                        <i class="material-icons">&#xE150;</i>
                    </a>
                </div>
                <div class="user_content">
                    <ul id="user_profile_tabs" class="uk-tab" data-uk-tab="{connect:'#user_profile_tabs_content', animation:'slide-horizontal'}" data-uk-sticky="{ top: 48, media: 960 }">
                        <li class="uk-active"><a href="#">Thông tin cơ bản</a></li>
                        <li><a href="#">Giấy khai sinh</a></li>
                        <li><a href="#">THAM VẤN TÂM LÝ</a></li>
                        <li><a href="#">HỌC BẠ</a></li>
                        <li><a href="#">LỊCH SỬ PHÁT TRIỂN</a></li>


                    </ul>
                    <ul id="user_profile_tabs_content" class="uk-switcher uk-margin">
                        <li>
                            @* EnrollReason *@
                            @Model.EnrollReason
                            <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">Thông tin cơ bản</h4>
                                    <ul class="md-list md-list-addon">
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon uk-icon-user"></i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">@Model.FullName</span>
                                                <span class="uk-text-small uk-text-muted">Họ và tên</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon uk-icon-birthday-cake"></i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">@Model.DateOfBirth.Value.ToString("dd/MM/yyyy")</span>
                                                <span class="uk-text-small uk-text-muted">Ngày sinh</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon @if (Model.Gender == "Nam") { @Html.Raw("uk-icon-male")} else { @Html.Raw("uk-icon-female")}"></i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">@Model.Gender</span>
                                                <span class="uk-text-small uk-text-muted">Giới tính</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon uk-icon-clock-o"></i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">@Model.Age</span>
                                                <span class="uk-text-small uk-text-muted">Tuổi</span>
                                            </div>
                                        </li>

                                    </ul>
                                </div>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">Thông tin khác</h4>
                                    <ul class="md-list">
                                        <li>
                                            <div class="md-list-content">
                                                <span class="md-list-heading" style="color: rgba(0,123,255,1)">@Model.FoodExpenses.Value.ToString("#,##0") (đồng)</span>
                                                <span class="uk-text-small uk-text-muted">Chi phí ăn uống</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-content">
                                                <span class="md-list-heading" style="color: rgba(0,123,255,1)">@Model.EducationExpenses.Value.ToString("#,##0") (đồng)</span>
                                                <span class="uk-text-small uk-text-muted">Học phí</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-content">
                                                <span class="md-list-heading" style="color: rgba(0,123,255,1)">@if (Model.Hk01 == true)
                                                {@Html.DisplayNameFor(model => model.Hk01) }
                                                else
                                                { @Html.DisplayNameFor(model => model.Hk02)} </span>
                                                <span class="uk-text-small uk-text-muted">HK</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-content">
                                                <span class="md-list-heading" style="color: rgba(0,123,255,1)">@Model.EducationID</span>
                                                <span class="uk-text-small uk-text-muted">Lớp</span>
                                            </div>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div id="user_profile_gallery" data-uk-check-display class="uk-grid-width-small-1-2 uk-grid-width-medium-1-3 uk-grid-width-large-1-4" data-uk-grid="{gutter: 4}">
                                <div>
                                    <a href="@Model.BirthCertificate" data-uk-lightbox="{group:'user-photos'}">
                                        <img src="@Model.BirthCertificate" alt="" />
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li>
                            @Model.Problem
                            <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">Thông tin tham vấn</h4>
                                </div>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">Phiếu tham vấn</h4>
                                </div>
                                @Html.Action("CounselingIndex", "Children", new { clid = Model.Code})
                            </div>
                        </li>
                        <li>
                            <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">NĂM HỌC</h4>
                                </div>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">ĐIỂM TRUNG BÌNH</h4>
                                </div>
                                @Html.Action("SchoolReport", "Children", new { clid = Model.Code })
                            </div>
                        </li>
                        <li>
                            <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                                <div class="uk-width-large-1-2" >
                                    <h4 class="heading_c uk-margin-small-bottom">MỐC THỜI GIAN</h4>
                                </div>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">THÀNH TỰU</h4>
                                </div>
                                @Html.Action("DevelopmentProcess", "Children", new { clid = Model.Code })
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-margin-medium-bottom">
                        <h3 class="heading_c uk-margin-bottom">BẢO HIỂM XÃ HỘI</h3>
                        <ul class="md-list md-list-addon">
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-warning">&#xE8B2;</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">@Model.HealthInsuranceID</span>
                                    <span class="uk-text-small uk-text-muted uk-text-truncate">Mã bảo hiểm</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-warning">&#xE8B2;</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">@(Model.Successive ? "Liên tục" : "Không liên tục")</span>
                                    <span class="uk-text-small uk-text-muted uk-text-truncate">Liên tục</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <h3 class="heading_c uk-margin-bottom">HỒ SƠ KHÁC</h3>
                    <ul class="md-list md-list-addon uk-margin-bottom">
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons uk-text-success">&#xE88F;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">@Model.SchoolReportID</span>
                                <span class="uk-text-small uk-text-muted">Mã học bạ</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons uk-text-success">&#xE88F;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">@Model.XFamilyBookID</span>
                                <span class="uk-text-small uk-text-muted">Sổ hồ sơ công giáo</span>
                            </div>
                        </li>
                    </ul>
                    @*<a class="md-btn md-btn-flat md-btn-flat-primary" href="#">Show al</a>*@
                </div>
            </div>
        </div>
    </div>
</div>
