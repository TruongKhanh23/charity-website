@model IEnumerable<Model.EF.Quote>

<style>
    .grid-div {
        margin-top: 1em;
        display: grid;
        grid-template-rows: repeat(auto, auto);
        grid-template-columns: repeat(3, auto);
        grid-gap: 1em;
    }

        .grid-div .grid-item {
            background: rgb(230, 230, 250);
            border-radius: 5px;
        }

        .grid-div img {
            border-radius: 50%;
            margin: .5em;
            border: 2px solid black;
        }

        .grid-div .grid-item > div {
            display: flex;
            flex-direction: row;
        }

            .grid-div .grid-item > div > h1 {
                display: inline-flex;
                justify-content: center;
                align-items: center;
                font-size: 1.5em !important;
                margin: auto;
                text-align: left;
                background-color: rgba(255, 255, 255, 1);
                border-radius: 5px;
                color: lightcoral;
            }

    .quote-div > q {
        width: fit-content;
        position: relative;
        quotes: '“' '„';
        font-family: "Times New Roman";
        text-align: center;
        padding: 2em 3em;
        margin: 0 auto;
        display: grid;
        place-items: center;
        font-weight: 900;
    }

        .quote-div > q:before {
            content: open-quote;
            font-size: 4em;
            margin: .1em;
            position: absolute;
            top: 0;
            left: 0;
            color: lightcoral;
        }

        .quote-div > q:after {
            content: close-quote;
            font-size: 4em;
            margin: .1em;
            position: absolute;
            bottom: 0;
            right: 0;
            color: lightcoral;
        }
</style>

@foreach (var item in Model)
{
    <div class="grid-item">
        <div class="profile-div">
            <h1 style="width: 12em; height: 3.5em; text-align: center; line-height: 1.3">@item.Name</h1>
            <img src="@Url.Content(item.Image)" id="imgQuote"
                 alt="100x100" class="bg-light" height="100" width="100">
        </div>
        <div class="quote-div">
            <q style="font-family: 'Times New Roman'; font-weight: 900; padding: 2em 3em">@item.Quote1</q>
        </div>
    </div>
}